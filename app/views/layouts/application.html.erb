<!DOCTYPE html>
<html>
  <head>
    <title><%= yield_or_default :title, "Real Estate" %></title>
    <meta name="description" content="<%= yield_or_default :description, "Real Estate Greece" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrap">
      <%= render "layouts/header" %>
      <div class="container">
        <div class="content">
          <div class="row">
            <div class="span12">
              <%= render "shared/flash_messages", flash: flash %>
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="push"></div>
    <%= render "layouts/footer" %>
    <%= javascript_include_tag "application" %>
    <%= yield :scripts %>
  </body>
</html>
