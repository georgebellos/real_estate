<%= title('Property')%>
<div>
  <p>
    <% @property.images.each do |image| %>
      <%= image_tag image.attachment.url %>
    <% end %>
  </p>
</div>
<div>
<h3> Property Key Features </h3>
  <ul>
    <li>Category: <%= @property.category %></li>
    <li>Floor Size: <%= @property.floor_size %></li>
    <li>Bedrooms: <%= @property.bedroom %></li>
    <li>Bathrooms: <%= @property.bathroom %></li>
    <li>Parking: <%= @property.parking %></li>
    <li>Construction Year: <%= @property.year %></li>
    <li>Location: <%= @property.street %><%= @property.street_number %></li>
  </ul>
</div>
<div>
  <p>
    <%= @property.summary %></br>
    Price: <%= @property.price %>
  </p>
</div>
<h2> Location </h2>
<%= gmaps4rails(@json) %>
<div>
  <h3> Contact Info: <%= @property.contact_info %> </h3>
</div>
